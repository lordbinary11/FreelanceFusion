        word-wrap: break-word
     }
     a.profile:hover{
        color:inherit
     }
     .dash{
        width: 138px; 
        margin-right:20px;
        text-align: center; 
        color: #338573; 
        font-size: 20px; 
        font-family: Noto Sans; 
        font-weight: 600; 
        text-decoration: none;
        word-wrap: break-word"
     }
     a.dash:hover{
        color:inherit
     }
     
    .postjob{
       width: 126px; 
       height: 38px; 
       text-align: center;
       color: white; 
       font-size: 24px; 
       font-family: Noto Sans; 
       font-weight: 700; 
       word-wrap: break-word;
       text-decoration: none;
       justify-content:center
    }
    a.postjob:hover{
        color:inherit
     }
    .login{
        width: 138px; 
        margin-right:20px;
        text-align: center; 
        color: #338573; 
        font-size: 20px; 
        font-family: Noto Sans; 
        font-weight: 600; 
        text-decoration: none;
        word-wrap: break-word"
     }
     a.login:hover{
        color:inherit
     }
      .joblisting{
        width: 138px; 
        margin-right:20px;
        text-align: center; 
        color: #338573; 
        font-size: 20px; 
        font-family: Noto Sans; 
        font-weight: 600; 
        text-decoration: none;
        word-wrap: break-word"
     }
     a.joblisting:hover{
        color:inherit
     }
     .logout{
        width: 138px; 
        margin-right:20px;
        text-align: center; 
        color: #338573; 
        font-size: 20px; 
        font-family: Noto Sans; 
        font-weight: 600; 
        text-decoration: none;
        word-wrap: break-word"
     }
     a.logout:hover{
        color:inherit
     }
     .signup{
        width: 138px; 
        margin-right:20px;
        text-align: center; 
        color: #338573; 
        font-size: 20px; 
        font-family: Noto Sans; 
        font-weight: 600; 
        text-decoration: none;
        word-wrap: break-word"
     }
     a.signup:hover{
        color:inherit
     }
     .logo{
        width: 210px; 
        text-align: center; 
        color: #338573; 
        font-size: 30px; 
        font-family: Noto Sans; 
        font-weight: 600; 
        text-decoration: none;
        word-wrap: break-word"
     }
     a.logo:hover{
        color:inherit
     }
    .header{
      top:0;
        position:fixed;
        z-index:10;
        background-color: transparent;
        width:100vw;
        transition: background-color 0.3s;
        
    }
    .header.transparent {
            background-color: transparent;
        }

        .header.scrolled {
            background-color: white;
        }
    .footer{
      bottom:0
        position:fixed;
        z-index:100;
        width:100vw;  
    }
    </style>

</head>
<body>
    @await Html.PartialAsync("_NavigationBar")



    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

       <script>
        window.addEventListener('scroll', function() {
            const header = document.querySelector('.header');
            const scrolled = window.scrollY > 0;
            if (scrolled) {
                header.classList.add('scrolled');
                header.classList.remove('transparent');
            } else {
                header.classList.add('transparent');
                header.classList.remove('scrolled');
            }
        });
    </script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
