@{
    ViewData["Title"] = "Freelancer Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .table {
            width: 90%;
            margin: 0 auto;
            border-collapse: collapse;
            margin-bottom: 30px;
            border-radius:100px;
        }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
           
        }

        .table th {
            background-color: #f2f2f2;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #f5f5f5;
        }

        .table a {
            padding: 6px 12px;
            border: 1px solid #;
            border-radius: 4px;
            background-color: #338573;
            color: #fff;
            text-decoration: none;
        }

        .table a:hover {
            background-color: #23527c;
            border-color: #23527c;
        }
    </style>
</head>
<body>
    <a asp-controller="Dashboard" asp-action="FreelancerView" >
        <h1 style="width:187px;left: 60px; margin-top: 20px; text-align:center; border-radius:20px; position: absolute; background: #338573; color: white; font-size: 20px; font-family: Poppins; font-weight: 500; line-height: 50px; word-wrap: break-word">Client View</h1>
    </a>

    <h2 style=" text-align: center;font-size: 30px; font-family: Poppins; font-weight: 500; line-height: 80px; word-wrap: break-word">My Job List</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Posted Date</th>
                <th>Application Deadline</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model.Item1)
            {
                <tr>
                    <td>@job.Title</td>
                    <td>@job.PostedDate</td>
                    <td>@job.Deadline</td>
                    <td>
                        <a asp-controller="JobDetails" asp-action="Index" asp-route-JobID="@job.JobID">View</a> |
                        @* <a asp-action="Edit" asp-route-id="@job.JobID">Edit</a> |
                        <a asp-controller="Dashboard" asp-action="DeleteJob" asp-route-JobID="@job.JobID" onclick="return confirm('Are you sure you want to delete this job?')">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2 style=" text-align: center;font-size: 30px; font-family: Poppins; font-weight: 500; line-height: 80px; word-wrap: break-word">Job Bids</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Freelancer Name</th>
                <th>Job Title</th>
                <th>Bid Date</th>
                <th>Bid Amount</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bid in Model.Item2)
            {
                <tr>
                    <td>@(bid.FirstName) @(bid.LastName)</td>
                    <td>@bid.JobTitle</td>
                    <td>@bid.BidDate</td>
                    <td>$ @bid.BidAmount</td>
                    <td>
                        <a asp-controller="BidDetails" asp-action="Index" asp-route-BidID='@bid.BidID'>View</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
