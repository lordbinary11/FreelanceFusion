      <div style="display: flex; flex-wrap: wrap; margin-top:50px;justify-content: space-around; width: 100%;">
        @foreach (var job in Model)
        {

            string[] imageFileNames = new string[] { "1.jpeg", "2.jpeg","3.jpeg","4.png" ,"5.jpeg" };
            string selectedImageFileName = imageFileNames[new Random().Next(imageFileNames.Length)];

            <div style="width: 30%; margin: 10px; position: relative;">
                <div style="width: 359px; height: 378px; position: relative">
                    <div style="width: 359px; height: 378px; left: 0px; top: 0px; position: absolute; background: white; border-radius: 12px"></div>
                    <div style="width: 311px; height: 48px; padding: 8px; left: 24px; top: 306px; position: absolute; background: white; border-radius: 12px; border: 1px #2563EB solid; justify-content: center; align-items: center; gap: 10px; display: inline-flex">
                        <a href="@Url.Action("Index", "JobDetails", new { JobID = job.JobID })" style="color: #2563EB; font-size: 14px; font-family: Inter; font-weight: 700; line-height: 22.40px; word-wrap: break-word; text-decoration: none;">View Details</a>
                    </div>

                    <div style="width: 238px; height: 32px; left: 24px; top: 250px; position: absolute">
                        <div style="width: 32px; height: 32px; left:10px; top: 0px; position: absolute; justify-content: center; align-items: center; display: inline-flex">
                       <img style="width: 32px; height: 32px; border-radius: 9999px; border: 1.50px white solid" src="~/images/account.png" />
                      </div>
                      <div style="left: 50px; top: 7px; position: absolute; color: #94A3B8; font-size: 12px; font-family: Inter; font-weight: 400; line-height: 19.20px; word-wrap: break-word">@job.FirstName @job.LastName </div>
                        <!-- Your other elements here -->
                    </div>
                    
                    <img style="width: 64px; height: 64px; left: 24px; top: 24px; position: absolute; border-radius: 8px" src="~/images/@selectedImageFileName" />
                    <div style="width: 24px; height: 24px; padding-top: 4px; padding-bottom: 4px; left: 311px; top: 24px; position: absolute; justify-content: center; align-items: center; display: inline-flex">
