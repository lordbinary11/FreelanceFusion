                            <div style="width: 2px; height: 2px; left: 0px; top: 7px; position: absolute; border: 2px #0F172A solid"></div>
                            <div style="width: 2px; height: 2px; left: 0px; top: 14px; position: absolute; border: 2px #0F172A solid"></div>
                            <div style="width: 2px; height: 2px; left: 0px; top: 0px; position: absolute; border: 2px #0F172A solid"></div>
                        </div>
                    </div>
                    <div style="left: 24px; top: 112px; position: absolute; color: #0F172A; font-size: 22px; font-family: Inter; font-weight: 700; line-height: 27.50px; word-wrap: break-word">@job.Title</div>
                    <div style="width: 311px; left: 24px; top: 152px; margin-top:20px; position: absolute; color: #94A3B8; font-size: 16px; font-family: Inter; font-weight: 400; line-height: 25.60px; word-wrap: break-word">
                        @if (job.Description.Length > 100)
                        {
                            @job.Description.Substring(0, 100)
                        }
